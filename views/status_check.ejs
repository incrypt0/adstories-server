<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ("./partials/head") %>
  </head>
  <body>
    <header>
      <div class="logo">
        <a href="/"
          ><img src="/images/black inst logo .png" alt=""
        /></a>
      </div>
    </header>
    <div class="section">
      <h2 class="center">Upload your view count</h2>

      <form id="submit-form" method="POST" action="<%= url %>  ">
        <h2 for="uid">Unique ID</h2>
        <input
          type="text"
          id="uid"
          name="uid"
          placeholder="Unique ID"
          autocomplete="off"
          required
        />
        <div class="button">
          <button id="claim-btn" class="btn claim" type="submit">
            <h5>Upload</h5>
          </button>
        </div>
        <div class="error" id="error-message"></div>
        <div class="msg" id="msg">
          <% if(typeof msg != 'undefined'){ %>
          <h5><%= msg %></h5>
          <%}%>
        </div>

        <div class="animation-container">
          <div class="animation"></div>
          <p></p>
        </div>
      </form>

      <%- include ("./partials/footer") %>
    </div>

    <script
      type="text/javascript"
      src="https://unpkg.com/axios/dist/axios.min.js"
    ></script>
    <script type="text/javascript" src="/imgur.js"></script>
    <script type="text/javascript" src="/app-verify.js"></script>
  </body>
</html>
